<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
    <xsl:template match="/">
        <xsl:for-each select="document('file://./')/*">
            <xsl:value-of select="unparsed-text(.)"/>
            <xsl:text>&#10;</xsl:text> <!-- Ajoute un saut de ligne entre les fichiers -->
        </xsl:for-each>
    </xsl:template>
</xsl:stylesheet>
